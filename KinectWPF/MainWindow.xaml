<Window x:Class="KinectWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Get Started Kinect" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="cmdActivar" Content="Activar Kinect" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="94" Click="cmdActivar_Click"/>

        <Label x:Name="lblStreamColor" Content="Stream Color" Margin="0,0,0,0" Grid.Row="0" Grid.Column="1"/>
        <Image Name="imgStreamColor" Grid.Row="0" Grid.Column="1" Margin="0,20,0,0"/>

        <Label x:Name="lblDepth" Content="Profundidad" Margin="0,0,0,0" Grid.Row="1" Grid.Column="0"/>
        <Image Name="imgDeth" Grid.Row="1" Grid.Column="0" Margin="0,20,0,0"/>



    </Grid>
</Window>
